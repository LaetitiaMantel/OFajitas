
{% extends 'base.html.twig' %}


{% block title %}Liste des Catégories{% endblock %}

{% block body %}

<div class="container">
    <h2 class="h2-color" >Les Categorie de produits</h2>

    <a class="btn btn-success" href="{{ path('app_back_category_new') }}">Ajouter une Categorie</a>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Image</th>
                <th>HomeOrder</th>

                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.picture }}</td>
                <td>{{ category.homeOrder }}</td>

                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-sm btn-info mb-2" href="{{ path('app_back_category_show', {'id': category.id}) }}">Détail</a>
                    <a class="btn btn-sm btn-danger" href="{{ path('app_back_category_edit', {'id': category.id}) }}">Modifier</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>

{% endblock %}
