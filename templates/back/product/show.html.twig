
{% extends 'base.html.twig' %}

{% block title %}
	{{ product.name }}
{% endblock %}


{% block body %}
	<div class="container">
		<h2 class="h2-color">{{ product.name }}</h2>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ product.id }}</td>
				</tr>
				<tr>
					<th>Nom du produit</th>
					<td>{{ product.name }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ product.description }}</td>
				</tr>
				<tr>
					<th>image</th>
					<td>{{ product.picture }}</td>
				</tr>
				<tr>
					<th>Prix</th>
					{% set price = product.getPrice()/100 %}
					<td>{{ price }}</td>
				</tr>
				<tr>
					<th>Note</th>
					<td>{{ product.rating }}</td>
				</tr>
				<tr>
					<th>Statut</th>
					<td>{{ product.status ? 'Yes' : 'No' }}</td>
				</tr>
				<tr>
					<th>Slug</th>
					<td>{{ product.slug }}</td>
				</tr>
				<tr>
					<th>CreatedAt</th>
					<td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>UpdatedAt</th>
					<td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>

		<a class="btn btn-success mb-2" href="{{ path('back_product_index') }}">Retour Ã  la liste</a>

		<a class="btn btn-warning mb-2" href="{{ path('back_product_edit', {'id': product.id}) }}">Modifier</a>

		{{ include('back/product/_delete_form.html.twig') }}
	</div>
{% endblock %}
