{% extends 'base.html.twig' %}

{% block title %}Hello MainController!
{% endblock %}

{% block body %}
	<!-- Section-->

	<section class="py-5">
		<div class="container px-4 px-lg-5">

			<div class="row mx-0 mb-5">

				<div class="col-lg-4">
					<div class="card border-0 text-center">
						<img src="{{ asset('images/bijoux.jpeg') }}" alt="Card image" class="card-img">
						<div class="card-img-overlay d-flex align-items-center">
							<div class="w-100">
								<a href="#" class="text-white text-decoration-none">
									<h3 class="display-4 mb-4 ">Bijoux</h3>
									<i class="fa-arrow-right fa ml-2"></i>
								</a>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-4">
					<div class="card border-0 text-center">
						<img src="{{ asset('images/images.jpeg') }}" alt="Card image" class="card-img">
						<div class="card-img-overlay d-flex align-items-center">
							<div class="w-100">
								<a href="#" class="text-white text-decoration-none">
									<h3 class="display-4 mb-4">Déco</h3>
									<i class="fa-arrow-right fa ml-2"></i>
								</a>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-4">
					<div class="card border-0 text-center">
						<img src="{{ asset('images/t-shirt.jpg') }}" alt="Card image" class="card-img">
						<div class="card-img-overlay d-flex align-items-center">
							<div class="w-100">
								<a href="#" class="text-white text-decoration-none">
									<h3 class="display-4">Prêt à porter</h3>
									<i class="fa-arrow-right fa ml-2"></i>
								</a>
							</div>
						</div>
					</div>
				</div>

			</div>
			<h2 class="h2-color">Les nouveautés</h2>
			<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
				{% for product in newProducts %}
					<div class="col mb-5">
						<div
							class="card h-100">
							<!-- Product image-->
							<img
							class="card-img-top" src="images/Image d’iOS.jpg" alt="..."/>
							<!-- Product details-->
							<div class="card-body p-4">
								<div
									class="text-center">
									<!-- Product name-->
									<h5 class="fw-bolder">{{ product.name}}</h5>
									<!-- Product price-->
                                    {#  affiche le prix /100 #}
									{% set price = product.getPrice()/100 %}
                                    {#  affiche le prix réel #}
									{{ price }} Euro
								</div>
							</div>
							<!-- Product actions-->
							<div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
								<div class="text-center">
									<a class="btn btn-outline-dark mt-auto" href="product.html">Voir produit</a>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>
{% endblock %}
