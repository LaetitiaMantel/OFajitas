{# templates/contact/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-4">
				<h2 class="h2-color">Contactez-nous</h2>

				{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
				{{ form_row(form.name) }}
				{{ form_row(form.email) }}
				{{ form_row(form.message) }}
				<button class="btn btn-success mb-2" type="submit">Envoyer</button>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
